<article class="post">
    <div class="title card event-title">
        <h3>{{post.title}}: {{{event_date}}}</h3>
        <p>{{post.post_content}}</p>

        <div class="post-metadata">
            <span class="killers-going">{{post.likes_count}} {{format_plural "Killer" post.likes_count}}
                Going</span> |
            <a href="/post/{{post.id}}">{{post.comments.length}}
                {{format_plural "Comment" post.comments.length}}</a>
        </div>
        {{> comments post.comments}}
    </div>
    {{#if loggedIn}}
    <div class="custom-control custom-checkbox mt-4">
        <input type="checkbox" class="custom-control-input" id="rsvp-checkbox" {{#if isGoing}}checked="checked" {{/if}} />
        <label class="custom-control-label" for="rsvp-checkbox">Interested in going? </label>
    </div>
    {{/if}}
</article>



{{#if loggedIn}}
<link rel="stylesheet" href="/javascript/tributejs/tribute.css" />
<br>
<br>
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button class="rounded-btn" type="submit">SUBMIT</button>
    </div>
</form>
<script src="/javascript/tributejs/tribute.min.js"></script>
<script src="/javascript/comment.js"></script>
<script src="/javascript/likes.js"></script>
{{/if}}
