<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post mt-2">
            <div class="title card event-title">
                <h3>{{post.title}}</h3>
                <p>{{post.post_content}}</p>

                <div class="post-metadata">
                    <span class="killers-going">{{post.likes_count}} {{format_plural "Killer" post.likes_count}}
                        Going</span> |
                    <a href="/post/{{post.id}}">{{post.comments.length}}
                        {{format_plural "Comment" post.comments.length}}</a>
                </div>
            </div>

        </article>
    </li>
    {{/each}}
</ul>


<div class="modal fade" id="exampleModalCenter" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header modal-color">
                <h5 class="modal-title" id="exampleModalLongTitle">PLEASE CONFIRM</h5>
                {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> --}}
            </div>
            <div class="modal-body modal-color">
                <p class="modal-text">BY CLICKING ENTER, I CONFIRM THAT I AM AT LEAST 21 YEARS OF AGE OR OLDER, AND DO
                    NOT
                    HOLD <span class="entry-text">'KILL THE KEG'</span> OR IT'S AFFILIATES RESPONSIBLE FOR ANY RESULTS
                    OF MY
                    ENTRY INTO IT'S
                    SITE</p>
            </div>
            <div class="modal-footer modal-color">

                <button id="site-entry" type="submit-btn" class="btn btn-primary">ENTER</button>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/modal.js"></script>